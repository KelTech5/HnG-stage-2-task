# Docker images (the grader will override these)
BLUE_IMAGE=yourorg/blue-node-app:latest
GREEN_IMAGE=yourorg/green-node-app:latest

# Which pool starts active: "blue" or "green"
ACTIVE_POOL=blue

# Release ids passed to each app (used by apps to return X-Release-Id)
RELEASE_ID_BLUE=blue-2025-01
RELEASE_ID_GREEN=green-2025-01

# App internal listening port inside container (apps should read PORT env)
PORT=3000

# Host-facing ports (the grader uses these)
HOST_PUBLIC_PORT=8080    # nginx public
HOST_BLUE_PORT=8081      # blue direct (grader controls chaos here)
HOST_GREEN_PORT=8082     # green direct
